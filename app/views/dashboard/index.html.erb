<div class="graphs-container">

  <div class="season-balance">
    <h4>Season balance</h4>
    <hr>
    <p> Total earnings </p>
    <div class="income">
      <p> +$<%= @earnings.group_by {|e| e.date.beginning_of_month}
      .transform_values {|v| v.pluck(:real_amount).reduce(:+)}
      .to_a
      .sort_by(&:first)
      .last(12)
      .map(&:second)
      .reduce(:+) 
      .to_s(:delimited) %> </p>
    </div>

    <hr>

    <p> Total expenses </p>
    <div class="expense">
      <p> -$<%= @expenses.group_by {|e| e.date.beginning_of_month}
        .transform_values {|v| v.pluck(:amount).reduce(:+)}
        .to_a
        .sort_by(&:first)
        .last(12)
        .map(&:second)
        .reduce(:+) 
        .to_s(:delimited) %> </p>
    </div>

  </div>

  <div class="donut season-balance">
    <canvas id="chartExpenses" width="600" height="300">
    </canvas>
  </div>
</div>

<div class="container-graph">
  <div class="text-2xl text-center">
    Evolution of the monthly results over the season in dollars ($)
  </div>
  <div>
    <canvas id="chartEarnings" width="900" height="300">

    </canvas>
  </div>
</div>