<div id="sidebar">
  <%= link_to (image_tag "ama-new-blue.png", alt: "logo", width: 160, class: 'mt-3 mb-5 mx-auto d-block'), root_path %>
  <div class="infos">
    <div class="main mb-0 ml-4">
      <p class="m-0 <%= 'active' if current_page?(earnings_path) || (params[:controller] == 'earnings' && params[:action] == 'show') || current_page?(tournaments_path) || (params[:controller] == 'tournaments' && params[:action] == 'show') %>"><i class="far fa-calendar-alt mr <%= 'active' if current_page?(earnings_path) || (params[:controller] == 'earnings' && params[:action] == 'show') || current_page?(tournaments_path) || (params[:controller] == 'tournaments' && params[:action] == 'show')%>"></i> Tournaments</p>
      <div id="collapseTournament">
        <%= link_to earnings_path(only_past_earnings: false) do  %>
            My tournaments
        <% end %>
        <%= link_to tournaments_path do  %>
            Add a tournament
        <% end %>
      </div>
      <p class="mt-2 mb-0 <%= 'active' if current_page?(new_earning_path) || current_page?(new_earning_path) || current_page?(new_expense_path) || current_page?(dashboard_index_path)%>"><i class="fas fa-money-bill-wave mr-1 <%= 'active' if current_page?(new_earning_path) || current_page?(new_earning_path) || current_page?(new_expense_path) || current_page?(dashboard_index_path) %>"></i>My budget</p>
      <div id="collapseBudget">
        <%= link_to dashboard_index_path do  %>
            Dashboard
        <% end %>
        <%= link_to new_earning_path, data: { turbolinks: false } do  %>
            Add a fixed earning
        <% end %>
        <%= link_to new_expense_path, data: { turbolinks: false } do  %>
            Add a fixed expense
        <% end %>
      </div>
    </div>
  </div>
  <div class="ml-4 mb-2 d-flex flex-column infos">
      <%= link_to 'contact', class: "mt-2 #{'active' if current_page?('#')}" do %>
        <i class="far fa-address-book mr-1"></i>Contact
      <% end %>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, class: "mt-2", method: :delete do %>
          <i class="fas fa-sign-out-alt"></i> Log Out
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "mt-2" do %>
          <i class="fas fa-sign-in-alt"></i> Login
        <% end %>
      <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="d-flex align-items-center flex-end user-name">
      <%= link_to user_path(current_user), class: "#{'active' if current_page?('#')}" do %>
          <%= image_tag "stephane-robert.jpg", class: "avatar" %><em class="ml-1"><%= current_user.first_name %> <%= current_user.last_name %> </em>
      <% end %>
    </div>
  <% end %>
</div>

