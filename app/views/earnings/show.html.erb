  <h1 class='mb-5'>Add expenses for <strong><%= @tournament.name %></strong></h1>

  <div class="d-flex justify-content-between">
    <div class="suggestions">
      <h5>Hotels suggestions</h5>
      <p><em>Best offers around the stadium (3km)</em></p>
      <hr>
        <div class="display-map mt-4">
          <div
          id="map"
          class="container-map"
          data-marker="<%= @marker.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          data-amadeus-id="<%= ENV['AMADEUS_ID'] %>"
          data-amadeus-secret="<%= ENV['AMADEUS_SECRET'] %>"
          >
          </div>
        </div>
      <h5 class="mt-5">Flights suggestions</h5>
      <p><em>Best offers according to tournament dates</em></p>
      <hr>
        <div
          id="flights"
          data-flight="<%= @flight.to_json %>"
          data-amadeus-id="<%= ENV['AMADEUS_ID'] %>"
          data-amadeus-secret="<%= ENV['AMADEUS_SECRET'] %>"
          >
          </div>
    </div>

    <div class="card-expense p-3" id="expense-booking-form">
      <h5 class="mt-2"><strong>Add new expense:</strong></h5>
      <%= render "/shared/expense_form", expense: @expense, data: { turbolinks: false } %>
    </div>
  </div>
