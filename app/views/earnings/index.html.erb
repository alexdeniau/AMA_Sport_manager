<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="my-tournaments-tab" data-toggle="tab" href="#my-tournaments" role="tab" aria-controls="my-tournaments" aria-selected="true">My Tournaments</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="full-calendar-tab" data-toggle="tab" href="#full-calendar" role="tab" aria-controls="full-calendar" aria-selected="false">Calendar</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="my-tournaments" role="tabpanel" aria-labelledby="my-tournaments-tab">
    <div class="filters d-flex align-items-center">
      <%= link_to 'Upcoming', earnings_path(only_past_earnings: false), class: "#{'active' if params[:only_past_earnings] == 'false'} filter-btn"  %>
      <%= link_to 'Finished', earnings_path(only_past_earnings: true), class: "#{'active' if params[:only_past_earnings] == 'true'} filter-btn ml-3"  %>
      <%= link_to 'All', earnings_path, class: "#{'active' if !params[:only_past_earnings]} filter-btn ml-3" %>
      <%= link_to 'Add Tournaments', tournaments_path, class:'add-tournament-btn mt-0', data: { turbolinks: false }  %>
    </div>

    <% @earnings.each do |earning| %>
        <div class="earning-container">
          <div class="my-tournament-card"
          data-url="<%= "/earnings/#{earning.id}" %>"
          data-name="<%= earning.tournament.name %>"
          data-start-date="<%= earning.tournament.start_date %>"
          data-end-date="<%= earning.tournament.end_date %>"
          data-img-url="<%= cl_image_path earning.tournament.photo.key%>" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url('<%= cl_image_path earning.tournament.photo.key%>');" >
            <div class="text">
              <h1><%= earning.tournament.name %></h1>
              <h2 class="animate-text"><%= earning.tournament.address %></h2>
              <h2 class="animate-text"><%= earning.tournament.start_date.strftime("%A %B %d %Y") %></h2>
            </div>
          </div>
          <div class="earning-status">
            <% if earning.tournament.end_date < Date.today %>
              <p><em>Tournament finished since <%= earning.tournament.end_date.strftime("%d/%m/%Y")%>.</em><br>Please <strong>validate your result</strong> in order to calculate associated earning!</p>
              <div class="d-flex justify-content-end">
                <%= link_to earning_path(earning), class: 'manage-btn', data: { turbolinks: false } do %>
                  <span> Manage Tournament
                <% end %>
              </div>
            <% else %>
              <p class='waiting'><em><%= earning.tournament.name%> will finish on <%= earning.tournament.end_date.strftime("%d/%m/%Y")%></em></p>
              <p>Forecasted prize money: $<%= number_with_delimiter(earning.forecast_amount, :delimiter => ',') %></p>
              <div class="d-flex justify-content-end">
                <%= link_to earning_path(earning), class: 'manage-btn', data: { turbolinks: false } do %>
                  <span> Manage Tournament
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <hr class="mt-1 mb-3">
    <% end %>
  </div>
  <div class="tab-pane fade" id="full-calendar" role="tabpanel" aria-labelledby="full-calendar-tab">
    <div id="calendar-wrapper">
      <%= link_to 'Add Tournaments', tournaments_path, class:'add-tournament-btn', data: { turbolinks: false }  %>
      <div id='calendar'></div>
    </div>
  </div>
</div>






